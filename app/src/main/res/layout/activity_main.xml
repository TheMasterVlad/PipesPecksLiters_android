<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.laba_2_new.MainActivity"
    android:background="@drawable/mainbanner1_new">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_convert"
        android:id="@+id/btn_convert"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:onClick="onClick" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="82dp"
        android:layout_above="@+id/btn_convert"
        android:layout_centerVertical="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_pipes"
            android:checked="true"
            android:textColor="#ffffff"
            android:id="@+id/rb_pipes" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_pecks"
            android:id="@+id/rb_pecks"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_liters"
            android:id="@+id/rb_liters"
            android:textColor="#ffffff" />
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/txt_val"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_select_dialog_padding_start_material"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_clr"
        android:id="@+id/btn_clr"
        android:layout_alignBottom="@+id/btn_convert"
        android:layout_toLeftOf="@+id/btn_convert"
        android:layout_toStartOf="@+id/btn_convert"
        android:onClick="onClick_clear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_or"
        android:layout_below="@+id/txt_val"
        android:layout_alignLeft="@+id/btn_clr"
        android:layout_alignStart="@id/txt_val"
        android:layout_alignRight="@+id/txt_val"
        android:layout_alignEnd="@+id/txt_val"
        android:editable="false"
        android:textSize="@dimen/abc_select_dialog_padding_start_material"
        android:textColor="#ffffff" />
</RelativeLayout>
